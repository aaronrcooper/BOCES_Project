<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.cooper_assign2.MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:text="@string/txtTitle" />

    <Button
        android:id="@+id/btnTeachers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57dp"
        <!--android:onClick = "moveToTeachers"
        android:layout_marginStart="57dp"
        android:layout_marginTop="51dp"
        android:text="Teachers"
        android:layout_below="@+id/txtTitle"
        android:layout_alignLeft="@+id/txtTitle"
        android:layout_alignStart="@+id/txtTitle" />

    <Button
        android:id="@+id/btnStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnTeachers"
        android:layout_marginLeft="62dp"
        <!--android:onClick = "moveToStudents"-->
        android:layout_marginStart="62dp"
        android:layout_toEndOf="@+id/btnTeachers"
        android:layout_toRightOf="@+id/btnTeachers"
        android:text="Students" />

</RelativeLayout>
