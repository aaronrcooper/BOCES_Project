<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.student.cooper_assign2.Generate_Report_Activity"
    android:baselineAligned="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSelectTeacher"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="@string/txtSelectATeacher"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/report_teacher_spinner"
        android:layout_width="match_parent"
        android:layout_height="50sp" />

    <Button
        android:id="@+id/btnGenerateReport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/btnGenerateReport"
        android:onClick="createPDF"/>


</LinearLayout>
